{
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "next build",
  "env": {
    "VERCEL_BYPASS_FALLBACK_OVERSIZED_ERROR": "1"
  },
  "functions": {
    "src/app/**/*.tsx": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/sync-portfolios",
      "schedule": "0 21 * * 1-5"
    },
    {
      "path": "/api/cron/sync-financials?mode=priority&limit=200",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/cron/sync-financials?mode=continue&limit=500",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/sync-financials?mode=continue&limit=500",
      "schedule": "20 * * * *"
    },
    {
      "path": "/api/cron/sync-financials?mode=continue&limit=500",
      "schedule": "40 * * * *"
    },
    {
      "path": "/api/cron/sync-insider-trades?limit=100",
      "schedule": "10 * * * *"
    },
    {
      "path": "/api/cron/sync-short-volume",
      "schedule": "0 22 * * 1-5"
    },
    {
      "path": "/api/cron/sync-8k-filings?limit=200",
      "schedule": "30 * * * *"
    },
    {
      "path": "/api/cron/sync-prices?limit=200",
      "schedule": "*/10 14-21 * * 1-5"
    },
    {
      "path": "/api/cron/sync-prices?limit=200",
      "schedule": "0 6,12,18 * * *"
    },
    {
      "path": "/api/cron/sync-analyst-estimates?limit=30",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/monitoring/scraper-status",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/sync-norwegian-companies?mode=asa&limit=100",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/sync-norwegian-companies?mode=as&limit=100",
      "schedule": "30 */6 * * *"
    },
    {
      "path": "/api/cron/sync-norwegian-financials?mode=continue&limit=50",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/cron/sync-swedish-stocks?limit=20",
      "schedule": "0 */8 * * *"
    },
    {
      "path": "/api/cron/sync-danish-companies?mode=known&limit=25",
      "schedule": "15 */6 * * *"
    },
    {
      "path": "/api/cron/sync-finnish-companies?mode=known&limit=25",
      "schedule": "45 */6 * * *"
    },
    {
      "path": "/api/cron/sync-finnish-companies?mode=oyj&limit=50",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/sync-german-companies?mode=known&limit=10",
      "schedule": "30 4 * * *"
    }
  ]
}
