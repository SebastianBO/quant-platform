{
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "next build --webpack",
  "env": {
    "VERCEL_BYPASS_FALLBACK_OVERSIZED_ERROR": "1"
  },
  "functions": {
    "src/app/**/*.tsx": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/sync-portfolios",
      "schedule": "0 21 * * 1-5"
    },
    {
      "path": "/api/cron/sync-financials?mode=priority&limit=150",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/cron/sync-financials?mode=continue&limit=300",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/sync-financials?mode=continue&limit=300",
      "schedule": "30 * * * *"
    },
    {
      "path": "/api/cron/sync-insider-trades?limit=50",
      "schedule": "15 */2 * * *"
    },
    {
      "path": "/api/cron/sync-short-volume",
      "schedule": "0 22 * * 1-5"
    },
    {
      "path": "/api/cron/sync-8k-filings?limit=100",
      "schedule": "45 * * * *"
    },
    {
      "path": "/api/cron/sync-prices?limit=70",
      "schedule": "*/15 14-21 * * 1-5"
    },
    {
      "path": "/api/cron/sync-analyst-estimates?limit=20",
      "schedule": "0 6 * * *"
    }
  ]
}
