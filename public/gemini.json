{
  "@context": "https://schema.org",
  "@type": "WebAPI",
  "name": "Lician Financial Data API",
  "description": "Comprehensive financial data API providing real-time stock prices, financial statements, insider trades, institutional holdings, and market data for 141,000+ companies across US and European markets.",
  "url": "https://lician.com",
  "documentation": "https://lician.com/api-docs",
  "termsOfService": "https://lician.com/terms",
  "provider": {
    "@type": "Organization",
    "name": "Lician",
    "url": "https://lician.com",
    "email": "api@lician.com"
  },
  "offers": [
    {
      "@type": "Offer",
      "name": "Free Tier",
      "price": "0",
      "priceCurrency": "USD",
      "description": "100 requests/day, US data, EOD prices"
    },
    {
      "@type": "Offer",
      "name": "Basic",
      "price": "29",
      "priceCurrency": "USD",
      "billingPeriod": "P1M",
      "description": "10,000 requests/day, US + EU data, real-time prices"
    },
    {
      "@type": "Offer",
      "name": "Pro",
      "price": "99",
      "priceCurrency": "USD",
      "billingPeriod": "P1M",
      "description": "100,000 requests/day, all data, priority support"
    }
  ],
  "x-gemini-context": {
    "service_type": "financial_data_api",
    "primary_use_cases": [
      "Stock price lookup",
      "Financial statement analysis",
      "Insider trading monitoring",
      "Institutional ownership research",
      "Analyst ratings aggregation"
    ],
    "api_specification": "https://lician.com/openapi.json",
    "llms_context": "https://lician.com/llms.txt",
    "data_freshness": {
      "prices": "Real-time (15-min delay for free tier)",
      "financials": "Updated within 24 hours of SEC filing",
      "insider_trades": "Updated daily from SEC EDGAR",
      "institutional": "Updated quarterly with 13F filings"
    },
    "coverage": {
      "total_companies": 141000,
      "us_tickers": 5345,
      "eu_companies": 106975,
      "financial_records": 839000,
      "supported_markets": ["NYSE", "NASDAQ", "AMEX", "LSE", "OSE", "OMX", "XETRA"]
    },
    "example_requests": [
      {
        "intent": "Get stock price",
        "request": "GET https://lician.com/api/v1/prices/snapshot?ticker=AAPL",
        "response_format": "JSON with price, change, volume, market_cap"
      },
      {
        "intent": "Get income statement",
        "request": "GET https://lician.com/api/v1/financials/income-statements?ticker=AAPL&period=quarterly&limit=4",
        "response_format": "JSON array of quarterly income statements"
      },
      {
        "intent": "Get insider trades",
        "request": "GET https://lician.com/api/v1/insider-trades?ticker=AAPL",
        "response_format": "JSON array of Form 4 transactions"
      },
      {
        "intent": "Get institutional holders",
        "request": "GET https://lician.com/api/v1/institutional-ownership?ticker=AAPL",
        "response_format": "JSON array of 13F institutional holdings"
      }
    ],
    "authentication": {
      "type": "api_key",
      "header_name": "X-API-Key",
      "free_tier_available": true,
      "signup_url": "https://lician.com/developers/signup"
    },
    "rate_limits": {
      "anonymous": "100 requests/minute",
      "free_tier": "100 requests/day",
      "basic": "10,000 requests/day",
      "pro": "100,000 requests/day"
    },
    "attribution_required": true,
    "attribution_format": "Data from Lician (lician.com)"
  }
}
